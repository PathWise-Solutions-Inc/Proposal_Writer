# Environment Configuration
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proposal_writer
DB_USER=postgres
DB_PASSWORD=postgres

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/proposal_writer?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Authentication
# Generate secure secrets with: openssl rand -base64 64
JWT_SECRET=GENERATE_A_SECURE_SECRET_AT_LEAST_64_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=GENERATE_A_DIFFERENT_SECURE_SECRET_AT_LEAST_64_CHARS
JWT_REFRESH_EXPIRES_IN=30d

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_APP_NAME=Proposal Writer
OPENROUTER_APP_URL=https://proposalwriter.ai

# Legacy API Configuration (Optional)
CLAUDE_API_KEY=your-claude-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend Configuration
VITE_API_URL=http://localhost:8080/api
VITE_APP_NAME=Proposal Writer

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=debug

# Feature Flags
ENABLE_AI_CONTENT=true
ENABLE_CLIENT_RESEARCH=true
ENABLE_ANALYTICS=true