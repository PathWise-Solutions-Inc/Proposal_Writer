# Server Configuration
PORT=8006
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=proposal_writer

# MongoDB Configuration (for document storage)
MONGO_URI=mongodb://localhost:27017/proposal_writer_docs

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (should match auth service)
JWT_SECRET=your-secret-key

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf,odt

# Document Processing
TIKA_SERVER_URL=http://localhost:9998
PROCESSING_QUEUE_CONCURRENCY=3
TEXT_EXTRACTION_TIMEOUT=60000

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
